
.addMarker
  position absolute
  display flex
  justify-content center
  align-items center
  flex-direction column
  z-index 99
  background wheat
  width 180px
  height auto
  border-radius 10px
  &:before
    content: ''
    position: absolute
    right: 78px
    top: -10px
    width: 0
    height: 0
    border-style: solid
    border-width: 0 10px 10px 10px  
    border-color: transparent transparent wheat transparent
    z-index:9999  

  .input-wrapper
    display flex
    align-items: center
    input
      margin 5px
      width 120px
      height 20px
      font-size 13px
    button
      font-size 10px
      padding 2px
      margin-right 5px

  .button-wrapper
    display flex
    flex-direction: column;
    button
      margin 5px
      padding 5px
      font-size 10px 
    p
      font-size 12px
      padding 0
      margin 0  

    
.cross 
  float: right;
  cursor: pointer;
  &:hover
    color red